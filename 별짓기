#include <stdio.h>

void printstar(int count){
    for(int i = 0; i < count; i++)
        printf("*");
}
void printspace(int count){
    for(int i = 0; i < count; i++)
        printf(" ");
}

int main()
{
    int count = 0;
    scanf("%d", &count);
    
    for(int i = 0; i < count; i++){
        printspace(count-i-1);
        printstar(2*i+1);
        printf("\n");
    }
    
    return 0;
}
